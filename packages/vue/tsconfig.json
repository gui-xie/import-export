        "outDir": "./dist",
        "lib": [
            "dom",
            "es2020"
        ],
        "module": "esnext",
        "moduleResolution": "Bundler",
        "target": "es2017",
        "skipLibCheck": true
    },
    "include": ["lib"],
    "exclude": [
        "node_modules",
        "dist"
    ]
}